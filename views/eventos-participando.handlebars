
<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-dark">Meus Eventos</h2>
        <p class="text-muted">Acompanhe todos os eventos que você está participando.</p>
        <hr class="my-4 w-50 mx-auto">
    </div>
    
    {{#if eventos.length}}

     <a href="/" class="btn btn-primary mt-3 mb-4 d-flex align-items-center gap-2" style="width: fit-content;">
        <i class="bi bi-arrow-left"></i>
        Volta
    </a>
     
        <div class="row">
            {{#each eventos}}
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-lg d-flex flex-column position-relative">
                        <div class="status-indicator active"></div>
                        <li class="list-group-item"></li>
                        {{#if this.imagem}}
                            <img src="/uploads/{{this.imagem}}" alt="Imagem do evento" class="img-fluid rounded" style="max-height: 200px; width: 100%; object-fit: cover;">
                        {{else}}
                            <img src="/img/Semanaeltro.png" alt="Imagem padrão do evento" class="img-fluid rounded" style="max-height: 200px; width: 100%; object-fit: cover;">
                        {{/if}}
                        </li>

                        <div class="card-body d-flex flex-column flex-grow-1">
                            <h3 class="card-title text-primary">{{this.title}}</h3>
                            <p class="card-text mb-auto">{{this.descricao}}</p>
                        </div>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Palestrantes:</strong> {{this.palestrantes}}</li>
                            <li class="list-group-item"><strong>Local:</strong> {{this.local}}</li>
                            <li class="list-group-item"><strong>Curso:</strong> {{this.curso}}</li>
                            <li class="list-group-item"><strong>Data Início:</strong> {{this.dataFormatada}}</li>
                            <li class="list-group-item"><strong>Data Final:</strong> {{this.dataFormatada}}</li>
                            <li class="list-group-item"><strong>Duração:</strong> {{this.duracao}} dias</li>
                            <li class="list-group-item"><strong>Participantes:</strong> {{this.participantesAtuais}}/{{this.participantes}}</li>
                        </ul>

                        <div class="card-footer">
                            <button class="btn btn-danger w-100" id="cancelarBtn_{{this.id}}" onclick="cancelarParticipacao({{this.id}})">
                                <span id="btnText_{{this.id}}">Cancelar Participação</span>
                            </button>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <div class="alert alert-info text-center">
            <h4>Você ainda não está participando de nenhum evento</h4>
            <p>Explore a <a href="/eventos">página de eventos</a> para encontrar eventos interessantes!</p>
        </div>
    {{/if}}
</div>



<script src="/script/participando.js"></script>
<style>
    .card {
        border: none;
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 10px;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 1.5em;
        font-weight: bold;
    }

    .btn-danger {
        transition: all 0.3s;
    }

    .btn-danger:hover {
        transform: scale(1.05);
    }

    .status-indicator {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #28a745;
        border: 2px solid #fff;
        box-shadow: 0 0 0 1px #28a745;
        z-index: 1;
    }
</style>


