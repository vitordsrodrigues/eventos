
<div class="container mt-5">
    <div class="text-center mb-5">
        <p class="text-muted lead">Confira abaixo todos os eventos dos quais você já participou!</p>
        <hr class="my-4 w-50 mx-auto">
    </div>
    
    {{#if eventos.length}}

     <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="/" class="btn btn-outline-primary d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i>
            Voltar
        </a>
    </div>
     
  <div class="row">
    {{#each eventos}}
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-lg d-flex flex-column position-relative">
                <div class="status-indicator active"></div>
                <li class="list-group-item"></li>
                {{#if this.imagem}}
                    <img src="/uploads/{{this.imagem}}" alt="Imagem do evento" class="img-fluid rounded" style="max-height: 200px; width: 100%; object-fit: cover;">
                {{else}}
                    <img src="/img/Semanaeltro.png" alt="Imagem padrão do evento" class="img-fluid rounded" style="max-height: 200px; width: 100%; object-fit: cover;">
                {{/if}}
                </li>

                <div class="card-body d-flex flex-column flex-grow-1">
                    <h3 class="card-title text-primary">
                        <i class="me-2"></i>{{this.title}}
                    </h3>
                    <p class="card-text">
                        <i class="me-2"></i>{{this.descricao}}
                    </p>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="bi bi-person-video3 me-2"></i>
                        <strong>Palestrantes:</strong> {{this.palestrantes}}
                    </li>
                </ul>

                <div class="card-footer bg-success text-center">
                    <small class="text-white">Você participou no dia {{this.dataFormatada}}</small>
                </div>
            </div>
        </div>
    {{/each}}
</div>

    {{else}}
        <div class="empty-state text-center py-5">
            <h3 class="text-primary mb-3">Nenhum evento encontrado</h3>
            <p class="text-muted mb-4">Você ainda não está participando de nenhum evento. Que tal começar agora?</p>
            <a href="/eventos" class="btn btn-primary btn-lg">
                <i class="bi bi-calendar-plus me-2"></i>
                Explorar Eventos
            </a>
        </div>
    {{/if}}
</div>



