<div class="container mt-5">
    <a href="/eventos/dashboard" class="btn btn-secondary mb-3">Voltar</a>
    <h1 class="mb-4 text-center">Criando Evento</h1>
    
    <form action="/eventos/add" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Título:</label>
            <input type="text" name="title" class="form-control" placeholder="Digite o título do evento" required>
        </div>

        <div class="mb-3">
            <label for="local" class="form-label">Local:</label>
            <input type="text" name="local" class="form-control" placeholder="Digite o local do evento" required>
        </div>

        <div class="mb-3">
            <label for="participantes" class="form-label">Participantes:</label>
            <input type="number" name="participantes" class="form-control" placeholder="Número de participantes" required>
        </div>

        <div class="mb-3">
            <label for="data" class="form-label">Data:</label>
            <input type="date" name="data" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="palestrantes" class="form-label">Palestrantes:</label>
            <input type="text" name="palestrantes" class="form-control" placeholder="Digite os palestrantes (separados por vírgula)">
        </div>

        <div class="mb-3">
            <label for="duracao" class="form-label">Duração (dias):</label>
            <input type="number" name="duracao" class="form-control" placeholder="Digite a duração do evento em horas">
        </div>

        <div class="mb-3">
            <label for="curso" class="form-label">Curso:</label>
            <input type="text" name="curso" class="form-control" placeholder="Digite o nome do curso">
        </div>

        <div class="mb-3">
            <label for="descricao" class="form-label">Descrição:</label>
            <textarea name="descricao" class="form-control" placeholder="Descreva o evento" rows="4"></textarea>
        </div>

        <div class="text-center">
            <input type="submit" value="Criar Evento" class="btn btn-primary">
        </div>
    </form>
</div>
