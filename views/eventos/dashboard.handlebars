<script>
    document.addEventListener('DOMContentLoaded', function () {
        var eventoEditModal = document.getElementById('eventoEditModal');
        eventoEditModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            
            var id = button.getAttribute('data-id');
            var title = button.getAttribute('data-title');
            var local = button.getAttribute('data-local');
            var participantes = button.getAttribute('data-participantes');
            var data = button.getAttribute('data-data');
            var datalimite = button.getAttribute('data-datalimite');
            var palestrantes = button.getAttribute('data-palestrantes');
            var duracao = button.getAttribute('data-duracao');
            var curso = button.getAttribute('data-curso');
            var descricao = button.getAttribute('data-descricao');

            
            eventoEditModal.querySelector('input[name="id"]').value = id;
            eventoEditModal.querySelector('input[name="title"]').value = title;
            eventoEditModal.querySelector('input[name="local"]').value = local;
            eventoEditModal.querySelector('input[name="participantes"]').value = participantes;
            eventoEditModal.querySelector('input[name="data"]').value = data;
            eventoEditModal.querySelector('input[name="datalimite"]').value = datalimite;
            eventoEditModal.querySelector('input[name="palestrantes"]').value = palestrantes;
            eventoEditModal.querySelector('input[name="duracao"]').value = duracao;
            eventoEditModal.querySelector('input[name="curso"]').value = curso;
            eventoEditModal.querySelector('textarea[name="descricao"]').value = descricao;
        });
    });

    document.getElementById('data').min = new Date().toISOString().split('T')[0];

    
    function setMinDateLimite() {
        const dataEvento = new Date(document.getElementById('data').value);
        dataEvento.setDate(dataEvento.getDate() + 1); 
        document.getElementById('datalimite').min = dataEvento.toISOString().split('T')[0];
    }

</script>
