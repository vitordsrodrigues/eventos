<div class="container py-5">
    <div class="text-start mb-4">
        <a href="javascript:history.back()" class="btn">
            <i class="bi bi-arrow-left"></i>
        </a>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto">
           
            <div class="card shadow-lg rounded-3">
               
                <div class="card-header bg-primary text-white text-center py-4">
                    <div class="position-relative d-inline-block mb-3">
                        {{#if user.avatar}}
                            <img src="{{user.avatar}}" class="rounded-circle" width="120" height="120" alt="{{user.name}}">
                        {{else}}
                            <i class="bi bi-person-circle display-1"></i>
                        {{/if}}
                    </div>
                    <h2 class="mb-1">{{user.name}}</h2>
                    <p class="text-white-50 mb-0">Membro</p>
                </div>

                <div class="card-body p-4">
                    
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-calendar-check text-primary display-6 mb-2"></i>
                                    <h3 class="h2 mb-2">{{participationCount}}</h3>
                                    <p class="text-muted mb-0">Eventos Participados</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="bi bi-trophy text-primary display-6 mb-2"></i>
                                    <h3 class="h2 mb-2">Bronze</h3>
                                    <p class="text-muted mb-0">Conquistas</p>
                                    <small class="text-muted">
                                        Bronze: 0-14 eventos<br>
                                        Prata: 15-24 eventos<br>
                                        Ouro: 25-49 eventos<br>
                                        Elite: 50+ eventos
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title d-flex align-items-center">
                                        <i class="bi bi-person-vcard text-primary me-2"></i>
                                        Informações Pessoais
                                    </h5>
                                    <form action="/profile/update-password" method="POST">
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-3">
                                                <strong>Email:</strong> {{user.email}}
                                            </li>
                                            <li class="mb-3">
                                                <strong>Matrícula:</strong> {{user.matricula}}
                                            </li>
                                            <li class="mb-3">
                                                <div class="form-group">
                                                    <label for="currentPassword"><strong>Senha Atual:</strong></label>
                                                    <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                                                </div>
                                            </li>
                                            <li class="mb-3">
                                                <div class="form-group">
                                                    <label for="newPassword"><strong>Nova Senha:</strong></label>
                                                    <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                                                </div>
                                            </li>
                                            <li class="mb-3">
                                                <div class="form-group">
                                                    <label for="confirmPassword"><strong>Confirmar Senha:</strong></label>
                                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                                </div>
                                            </li>
                                            <li class="text-center">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="bi bi-key me-2"></i>Trocar Senha
                                                </button>
                                            </li>
                                        </ul>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-0 bg-light">
                                <div class="card-body">
                                    <h5 class="card-title d-flex align-items-center">
                                        <i class="bi bi-gear text-primary me-2"></i>
                                        Preferências
                                    </h5>
                                    <ul class="list-unstyled mb-0">
                                        {{#each user.interests}}
                                            <li class="mb-2">
                                                <span class="badge bg-primary">{{this}}</span>
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                    {{#if messages.message}}
                        <div class="alert alert-info mt-4">
                            {{messages.message}}
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div> 